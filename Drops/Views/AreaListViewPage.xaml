<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Drops.Views.AreaListViewPage">

    <ContentPage.Content>
        <StackLayout>
            <Label Text=""
                   TextColor="Black"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   x:Name="activeAreaBanner"/>
            <Button Text="Create Area"
                    Clicked="OnAreaButtonClicked"
                    TextColor="White"
                    BackgroundColor="Green"/>
            <ListView ItemsSource="{Binding AllAreas}"
                      x:Name="MyList"
                      SeparatorVisibility="None"
                      HasUnevenRows="True"

                  Footer="">
                <ListView.ItemTemplate>
                        <DataTemplate>
                           <ViewCell>
                                  <Grid Margin="10">
                                      <Grid.ColumnDefinitions>
                                          <ColumnDefinition Width="Auto"/>
                                          <ColumnDefinition Width="*"/>
                                      </Grid.ColumnDefinitions>
                                      <Label VerticalOptions="CenterAndExpand" Text="{Binding Name}"/>
                                      <Button Command="{Binding Path=BindingContext.ActivateCommand, Source={x:Reference MyList}}"
                                              CommandParameter="{Binding .}"
                                              Grid.Column="1"
                                              Padding="30,10"
                                              Text="Activate"
                                              HorizontalOptions="EndAndExpand"
                                              BackgroundColor="Blue"
                                              TextColor="White"/>
                                  </Grid>
                           </ViewCell>
                        </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
