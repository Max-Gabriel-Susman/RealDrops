<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Drops.ViewModels"
             x:Class="Drops.Views.PeopleListViewPage"
             Title="People">

    <ContentPage.BindingContext>
        <local:PeopleListViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <ListView x:Name="MyList"
                  ItemsSource="{Binding OtherUsers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Margin="10">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions> 
                                
                            <Label VerticalOptions="CenterAndExpand" Text="{Binding Username}"/>
                            <Button Command="{Binding Path=BindingContext.ShareAreaCommand, Source={x:Reference MyList}}"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="1"
                                    Padding="30,10"
                                    Text="Share Areas"
                                    HorizontalOptions="EndAndExpand"
                                    BackgroundColor="Green"
                                    TextColor="White"/>
                        </Grid>
                        <!--<Grid>
                            
                            <Label VerticalOptions="CenterAndExpand" Text="{Binding Username}"/>
                        </Grid>-->
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
